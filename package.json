{
	"name": "ultrahope-monorepo",
	"private": true,
	"workspaces": [
		"packages/*",
		"scripts"
	],
	"scripts": {
		"build": "turbo run build",
		"typecheck": "turbo run typecheck",
		"check": "biome check",
		"check:write": "biome check --write",
		"knip": "knip",
		"ok": "turbo run ok",
		"scripts:run": "bun run --cwd scripts",
		"bench:commit-message": "bun run --cwd packages/commit-message-benchmark generate",
		"bench:commit-message:add": "bun run --cwd packages/commit-message-benchmark add"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.9",
		"@types/node": "25.0.10",
		"knip": "5.80.2",
		"tsx": "4.20.5",
		"turbo": "2.8.3",
		"typescript": "5.9.3"
	},
	"packageManager": "bun@1.3.5",
	"version": "0.0.1"
}
