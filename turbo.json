{
	"$schema": "https://turborepo.dev/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},
		"typecheck": {
			"dependsOn": ["^build"]
		},
		"test": {},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"//#check:write": {},
		"//#knip": {},
		"ok": {
			"dependsOn": ["//#check:write", "typecheck", "test", "//#knip"],
			"cache": false
		}
	}
}
