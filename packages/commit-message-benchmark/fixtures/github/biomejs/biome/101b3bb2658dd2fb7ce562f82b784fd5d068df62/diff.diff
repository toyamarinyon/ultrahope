+  expectTypeOf("foo").not.toEqualTypeOf("bar");
+});
+it("should be a string", () => {
+  assertType<string>("foo");
+});
+
+describe("math", () => {
+  test("1+1", () => {
+    assert(1 + 1 === 2);
+  });
+});
