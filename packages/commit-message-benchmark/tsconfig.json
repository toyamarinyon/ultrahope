{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"types": ["node", "bun"],
		"noEmit": true
	},
	"include": ["src/**/*.ts", "fixtures/**/*.json"],
	"exclude": ["node_modules"]
}
