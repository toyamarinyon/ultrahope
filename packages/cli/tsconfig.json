{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"outDir": "./dist",
		"declaration": true
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules"]
}
