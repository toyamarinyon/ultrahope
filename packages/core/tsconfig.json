{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"strict": true,
		"noEmit": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
